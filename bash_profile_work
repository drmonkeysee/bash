# Path
PATH=/usr/local/bin:$PATH:$HOME/Documents/Android/sdk/tools:$HOME/Documents/Android/sdk/platform-tools
export PATH=`echo -n $PATH | awk -v RS=: -v ORS=: '!path[$0]++' | sed 's/:$//'`

# Aliases
alias twr='open -a /Applications/TextWrangler.app'
alias gcm='open -a "/Applications/Google Chrome.app"'
alias xcbnosign="xcrun xcodebuild CODE_SIGNING_REQUIRED=NO CODE_SIGN_IDENTITY="
alias ls='ls -F'

# Git prompt setup
source ~/Documents/GitHub/git/contrib/completion/git-completion.bash
source ~/Documents/GitHub/git/contrib/completion/git-prompt.sh
GIT_PS1_SHOWDIRTYSTATE=1
GIT_PS1_SHOWSTASHSTATE=1
GIT_PS1_SHOWUNTRACKEDFILES=1
GIT_PS1_SHOWCOLORHINTS=1
PROMPT_COMMAND="$PROMPT_COMMAND __git_ps1 '\u@\h:\W' 'âˆ« '"
